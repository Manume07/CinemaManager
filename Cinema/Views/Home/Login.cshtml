@model Cinema.Models.Login

@{
    ViewData["Title"] = "Pagina di Accesso";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow border-0">
            <div class="card-header bg-dark text-white text-center py-3">
                <h4 class="mb-0">Accesso Gestore Cinema</h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="Login" method="post">

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Nome Utente</label>
                        <input asp-for="Username" class="form-control" placeholder="Inserisci il tuo nome utente" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la password" required />
                    </div>

                    @if (ViewBag.Errore != null)
                    {
                        <div class="alert alert-danger py-2 text-center">
                            <strong>Attenzione:</strong> @ViewBag.Errore
                        </div>
                    }

                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <strong>Accedi al Sistema</strong>
                    </button>
                    

                </form>
            </div>

            <div class="card-footer text-center bg-light">
                <small class="text-muted">Inserisci le chiavi per gestire le sale</small>
            </div>
        </div>
    </div>
</div>